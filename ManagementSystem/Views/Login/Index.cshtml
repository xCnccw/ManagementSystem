<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
  <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap-clearmin.min.css">
  <link rel="stylesheet" type="text/css" href="~/Content/assets/css/roboto.css">
  <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.min.css">
  <title>收租宝EASYRENT</title>
  <style></style>
</head>
<body class="cm-login">

  <div class="text-center" style="padding: 90px 0 30px 0; color: aliceblue; font-family: FZYaoti; background: #9A59B5; border-bottom: 1px solid #ddd ">
    <!-- <img src="assets/img/logo-big.svg" width="300" height="45"> -->
    @*<h1>管理系统</h1>*@
    <div style="line-height:50px;font-size:40px;padding-left:;text-align:center;"><img style="width:40px;height:40px;" src="~/Content/assets/img/sf/keyring.svg" />&nbsp收租宝</div>
  </div>

  <div class="col-sm-6 col-md-4 col-lg-3" style="margin:40px auto; float:none;">
    <form method="post" id="myForm" onsubmit="return checkForm()" action="/Login/Index">
      <div class="col-xs-12">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
            <input type="text" name="username" id="userName" class="form-control" maxlength="16" placeholder="用户名">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
            <input type="password" name="password" id="pwd" class="form-control" maxlength="16" placeholder="密码">
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="checkbox"><label><input type="checkbox"> 记住我 </label></div>
      </div><div class="col-xs-6">
        <button type="submit" class="btn btn-block btn-primary">登录</button>
      </div>
            <h4 class="col-xs-12" style="color:darkred;">@ViewBag.notice</h4>
    </form>
  </div>
  <script src="~/Scripts/jquery-3.4.1.min.js"></script>
  <script>
    function checkForm() {
      var userName = $('#userName').val();
      var pwd = $('#pwd').val();
      if (userName.length < 1) {
        $("#notice").text("用户名不能为空！");
        return false;
      }
      if (pwd.length < 1) {
        $("#notice").text("密码不能为空！");
        return false;
      }
    }
  </script>
</body>
</html>
